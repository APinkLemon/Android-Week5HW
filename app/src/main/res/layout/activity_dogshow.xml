<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogShow">

    <LinearLayout
        android:id="@+id/dog_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dog_show_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/dog2" />

        <TextView
            android:id="@+id/dog_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比熊"
            android:textSize="20dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dog_show_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海  闵行"
            android:textSize="20dp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/dog_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李先生"
            android:textSize="20dp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/dog_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1357591569"
            android:textSize="20dp"
            android:padding="5dp"/>
        <Button
            android:id="@+id/button_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dog_info" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>